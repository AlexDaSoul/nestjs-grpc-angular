{
    "name": "backend",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "docker:dev:up": "docker-compose -f docker/docker-compose.yml -p api up -d",
        "docker:dev:down": "docker-compose -f docker/docker-compose.yml -p api down",
        "docker:dev:restart": "npm run docker:dev:down && npm run docker:dev:up",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "grpc:generate": "node developtools/build-nestjs-typings.js",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/account/main",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/account/test/jest-e2e.json"
    },
    "dependencies": {
        "@grpc/proto-loader": "^0.5.3",
        "@nestjs/common": "^6.10.2",
        "@nestjs/core": "^6.10.2",
        "@nestjs/microservices": "^6.10.2",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.14.0",
        "db-migrate": "^0.11.6",
        "db-migrate-pg": "^1.0.0",
        "grpc": "^1.24.2",
        "jsonwebtoken": "^8.5.1",
        "pem": "^1.14.3",
        "pg": "^7.14.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.0",
        "rxjs": "^6.5.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^6.9.0",
        "@nestjs/schematics": "^6.7.0",
        "@nestjs/testing": "^6.7.1",
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.18",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/node": "^12.12.8",
        "@types/pem": "^1.9.5",
        "@types/pg": "^7.11.2",
        "@types/supertest": "^2.0.8",
        "fs-extra": "^8.0.1",
        "google-protobuf": "^3.11.0",
        "jest": "^24.9.0",
        "prettier": "^1.18.2",
        "rimraf": "^3.0.0",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-loader": "^6.1.1",
        "ts-node": "^8.4.1",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^5.20.0",
        "typescript": "^3.6.3",
        "protobufjs": "^6.8.8"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "@grpc-proto/(.*)": "<rootDir>/libs/grpc-proto/$1",
            "@grpc-proto": "<rootDir>/libs/grpc-proto",
            "@lib/(.*)": "<rootDir>/libs/lib/src/$1",
            "@lib": "<rootDir>/libs/lib/src",
            "@auth/(.*)": "<rootDir>/auth/src/$1",
            "@chat/(.*)": "<rootDir>/chat/src/$1",
            "@user/(.*)": "<rootDir>/user/src/$1"
        }
    }
}
