{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "preserveSymlinks": true,
        "target": "esnext",
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "newLine": "LF",
        "paths": {
            "@grpc/*": [
                "grpc-proto/*"
            ],
            "@lib/*": [
                "lib/*"
            ]
        },
        "types": [
            "node",
            "webpack-env"
        ]
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}
