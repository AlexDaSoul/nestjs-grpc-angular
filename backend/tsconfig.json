{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@grpc-proto": [
                "libs/grpc-proto"
            ],
            "@grpc-proto/*": [
                "libs/grpc-proto/*"
            ],
            "@lib": [
                "libs/lib/src"
            ],
            "@lib/*": [
                "libs/lib/src/*"
            ],
            "@auth/*": [
                "apps/auth/src/*"
            ],
            "@chat/*": [
                "apps/chat/src/*"
            ],
            "@user/*": [
                "apps/user/src/*"
            ]
        }
    },
    "newLine": "LF",
    "exclude": [
        "node_modules",
        "dist"
    ]
}
